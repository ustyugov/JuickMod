<resources>
    <style name="AppThemeLight" parent="android:style/Theme.Holo.Light">
        <item name="android:actionBarStyle">@style/ActionBarLight</item>
        <item name="android:windowContentOverlay">@drawable/actionbar_shadow</item>
    </style>
    
    <style name="ActionBarLight" parent="android:style/Widget.Holo.Light.ActionBar">
        <item name="android:background">#eee</item>
        <item name="android:titleTextStyle">@style/ActionBarTitleLight</item>
        <item name="android:icon">@drawable/ic_launcher</item>
    </style>
    
    <style name="ActionBarTitleLight">
        <item name="android:textColor">@color/actionbar_title_color_light</item>
    </style>
    
    
    
    <style name="AppThemeDark" parent="android:style/Theme.Holo">
        <item name="android:actionBarStyle">@style/ActionBarDark</item>
        <item name="android:windowContentOverlay">@drawable/actionbar_shadow</item>
    </style>

    <style name="ActionBarDark" parent="android:style/Widget.Holo.ActionBar">
        <item name="android:background">#000</item>
        <item name="android:titleTextStyle">@style/ActionBarTitleDark</item>
        <item name="android:icon">@drawable/ic_launcher</item>
    </style>

    <style name="ActionBarTitleDark">
        <item name="android:textColor">@color/actionbar_title_color_dark</item>
    </style>
</resources>
