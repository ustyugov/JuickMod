<resources>

    <style name="AppThemeLight" parent="android:style/Theme.Light">
        <item name="android:windowTitleSize">@dimen/actionbar_compat_height</item>
        <item name="android:windowTitleBackgroundStyle">@style/ActionBarCompatLight</item>
        <item name="android:windowContentOverlay">@drawable/actionbar_shadow</item>

        <!-- for programmatic instantiation -->
        <item name="actionbarCompatTitleStyle">@style/ActionBarCompatTitleLight</item>
        <item name="actionbarCompatSubTitleStyle">@style/ActionBarCompatSubTitleLight</item>
        <item name="actionbarCompatItemStyle">@style/ActionBarCompatItem</item>
        <item name="actionbarCompatItemHomeStyle">@style/ActionBarCompatHomeItem</item>
        <item name="actionbarCompatProgressIndicatorStyle">@style/ActionBarCompatProgressIndicator</item>
    </style>
    
    <style name="ActionBarCompatLight">
        <item name="android:background">#eee</item>
    </style>
    
    <style name="ActionBarCompatTitleLight" parent="style/ActionBarCompatTitleBase">
        <item name="android:textColor">@color/actionbar_title_color_light</item>
    </style>
    
    <style name="ActionBarCompatSubTitleLight" parent="style/ActionBarCompatSubTitleBase">
        <item name="android:textColor">@color/actionbar_title_color_light</item>
    </style>
    
    
    <style name="AppThemeDark" parent="android:style/Theme">
        <item name="android:background">#000</item>
        <item name="android:windowTitleSize">@dimen/actionbar_compat_height</item>
        <item name="android:windowTitleBackgroundStyle">@style/ActionBarCompatDark</item>
        <item name="android:windowContentOverlay">@drawable/actionbar_shadow</item>

        <!-- for programmatic instantiation -->
        <item name="actionbarCompatTitleStyle">@style/ActionBarCompatTitleDark</item>
        <item name="actionbarCompatSubTitleStyle">@style/ActionBarCompatSubTitleDark</item>
        <item name="actionbarCompatItemStyle">@style/ActionBarCompatItem</item>
        <item name="actionbarCompatItemHomeStyle">@style/ActionBarCompatHomeItem</item>
        <item name="actionbarCompatProgressIndicatorStyle">@style/ActionBarCompatProgressIndicator</item>
    </style>
    
    <style name="ActionBarCompatDark">
        <item name="android:background">#000</item>
    </style>
    
    <style name="ActionBarCompatTitleDark" parent="style/ActionBarCompatTitleBase">
        <item name="android:textColor">@color/actionbar_title_color_dark</item>
    </style>
    
    <style name="ActionBarCompatSubTitleDark" parent="style/ActionBarCompatSubTitleBase">
        <item name="android:textColor">@color/actionbar_title_color_dark</item>
    </style>
    

    <style name="ActionBarCompatItemBase">
        <!-- layout_width/height must be set in code -->
        <item name="android:scaleType">center</item>
        <item name="android:background">@drawable/actionbar_compat_item</item>
    </style>

    <style name="ActionBarCompatProgressIndicator" parent="android:style/Widget.ProgressBar.Large">
        <item name="android:indeterminate">true</item>
    </style>

    <style name="ActionBarCompatTitleBase">
        <item name="android:id">@id/actionbar_compat_title</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textSize">18dp</item>
        <item name="android:paddingLeft">6dp</item>
        <item name="android:paddingRight">6dp</item>
        <item name="android:singleLine">true</item>
        <item name="android:ellipsize">end</item>
    </style>
    
    <style name="ActionBarCompatSubTitleBase">
        <item name="android:id">@id/actionbar_compat_sub_title</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textSize">14dp</item>
        <item name="android:paddingLeft">6dp</item>
        <item name="android:paddingRight">6dp</item>
        <item name="android:singleLine">true</item>
        <item name="android:ellipsize">end</item>
    </style>

    <style name="ActionBarCompatItem" parent="style/ActionBarCompatItemBase">
    </style>

    <style name="ActionBarCompatHomeItem" parent="style/ActionBarCompatItemBase">
    </style>

</resources>
